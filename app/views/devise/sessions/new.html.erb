<div class="flex-1 max-w-lg mx-auto	">
  <h2 class="text-xl font-bold text-blue-700 mb-6">SIGN IN</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="mt-3">
        <%= f.label :email, class: "block mb-1" %>
        <%= f.email_field :email, autocomplete: "email", class: "input" %>
    </div>

    <div class="mt-3">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "password", class: "input" %>
    </div>


    <div class="actions">
      <%= f.submit "Sign in", class: "mt-5 w-full text-center p-4 rounded text-white bg-blue-700 hover:bg-blue-800 cursor-pointer" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>